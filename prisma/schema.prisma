generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum WorkspaceMode {
  TEST
  PRODUCTION
}

enum ContactStatus {
  ACTIVE
  SUPPRESSED
  BOUNCED
  COMPLAINED
}

enum BroadcastStatus {
  DRAFT
  SCHEDULED
  SENDING
  SENT
  CANCELLED
}

enum MessageStatus {
  PENDING
  SCHEDULED
  SENT
  FAILED
}

enum HygieneRiskLevel {
  LOW
  MEDIUM
  HIGH
}

enum FlowStatus {
  DRAFT
  ACTIVE
  PAUSED
}

enum FlowStepType {
  TRIGGER
  DELAY
  SEGMENT_FILTER
  SEND_TEMPLATE
}

enum FlowRunStatus {
  PENDING
  WAITING
  COMPLETED
  CANCELLED
  FAILED
}

model Settings {
  id                       Int            @id @default(1)
  mode                     WorkspaceMode  @default(TEST)
  resendApiKeyCiphertext   String?
  resendApiKeyNonce        String?
  resendApiKeyTag          String?
  resendMetadata           Json?
  resendLastValidatedAt    DateTime?
  webhookSecretCiphertext  String?
  webhookSecretNonce       String?
  webhookSecretTag         String?
  webhookEnabled           Boolean        @default(false)
  webhookLastReceivedAt    DateTime?
  testModeEnabled          Boolean        @default(true)
  onboardingTestListCreatedAt DateTime?
  onboardingTestBroadcastSentAt DateTime?
  createdAt                DateTime       @default(now())
  updatedAt                DateTime       @updatedAt
}

model Contact {
  id                String              @id @default(cuid())
  email             String
  status            ContactStatus       @default(ACTIVE)
  timezone          String?             @db.VarChar(64)
  lifecycleStage    String?             @db.VarChar(64)
  tags              String[]            @default([])
  propensity        Decimal?            @db.Decimal(5, 4)
  lastEventAt       DateTime?
  lastMessageSentAt DateTime?
  hygieneRiskLevel  HygieneRiskLevel    @default(LOW)
  hygieneScore      Float?
  segmentMemberships SegmentMembership[]
  messages          Message[]
  events            Event[]
  suppressions      Suppression[]
  optimizerDecisions OptimizerDecision[]
  hygieneEvaluations HygieneEvaluation[]
  flowRuns          FlowRun[]
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  @@unique([email])
}

model Segment {
  id                 String               @id @default(cuid())
  name               String               @db.VarChar(120)
  description        String?              @db.VarChar(500)
  definition         Json
  isSystem           Boolean              @default(false)
  lastComputedAt     DateTime?
  estimatedSize      Int?
  memberships        SegmentMembership[]
  broadcasts         Broadcast[]
  flows              Flow[]
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt

  @@unique([name])
}

model SegmentMembership {
  id         String   @id @default(cuid())
  segment    Segment  @relation(fields: [segmentId], references: [id], onDelete: Cascade)
  segmentId  String
  contact    Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  contactId  String
  joinedAt   DateTime @default(now())

  @@unique([segmentId, contactId])
}

model Template {
  id          String     @id @default(cuid())
  name        String     @db.VarChar(120)
  category    String?    @db.VarChar(60)
  subject     String     @db.VarChar(160)
  previewText String?    @db.VarChar(160)
  html        String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  messages    Message[]
  broadcasts  Broadcast[]
  flows       Flow[]

  @@unique([name])
}

model Broadcast {
  id                 String          @id @default(cuid())
  name               String          @db.VarChar(160)
  status             BroadcastStatus @default(DRAFT)
  segment            Segment?        @relation(fields: [segmentId], references: [id])
  segmentId          String?
  template           Template        @relation(fields: [templateId], references: [id])
  templateId         String
  scheduledSendAt    DateTime?
  sendMode           WorkspaceMode   @default(TEST)
  totalRecipients    Int?            @default(0)
  createdAt          DateTime        @default(now())
  updatedAt          DateTime        @updatedAt
  messages           Message[]
}

model Message {
  id                String         @id @default(cuid())
  broadcast         Broadcast?     @relation(fields: [broadcastId], references: [id])
  broadcastId       String?
  contact           Contact        @relation(fields: [contactId], references: [id], onDelete: Cascade)
  contactId         String
  template          Template?      @relation(fields: [templateId], references: [id])
  templateId        String?
  resendMessageId   String?        @unique
  status            MessageStatus  @default(PENDING)
  scheduledSendAt   DateTime?
  sentAt            DateTime?
  lastStatusCheckAt DateTime?
  flowRun           FlowRun?       @relation("FlowRunMessage", fields: [flowRunId], references: [id])
  flowRunId         String?        @unique
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  outcome           MessageOutcome?
}

model MessageOutcome {
  id             String    @id @default(cuid())
  message        Message   @relation(fields: [messageId], references: [id], onDelete: Cascade)
  messageId      String    @unique
  deliveredAt    DateTime?
  bouncedAt      DateTime?
  failedAt       DateTime?
  complainedAt   DateTime?
  suppressedAt   DateTime?
  clickProbability Decimal? @db.Decimal(5, 4)
  clickedAt      DateTime?
  lastEvent      String?   @db.VarChar(80)
  metadata       Json?
  updatedAt      DateTime  @updatedAt
  createdAt      DateTime  @default(now())
}

model Event {
  id             String    @id @default(cuid())
  contact        Contact?  @relation(fields: [contactId], references: [id], onDelete: SetNull)
  contactId      String?
  externalUserId String?   @db.VarChar(120)
  eventName      String    @db.VarChar(120)
  timestamp      DateTime  @default(now())
  properties     Json?
  createdAt      DateTime  @default(now())
  @@index([externalUserId, timestamp])
}

model Suppression {
  id            String    @id @default(cuid())
  contact       Contact?  @relation(fields: [contactId], references: [id], onDelete: SetNull)
  contactId     String?
  reason        String    @db.VarChar(160)
  source        String    @db.VarChar(80)
  suppressedAt  DateTime  @default(now())
  notes         String?   @db.VarChar(500)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model OptimizerDecision {
  id              String   @id @default(cuid())
  contact         Contact  @relation(fields: [contactId], references: [id], onDelete: Cascade)
  contactId       String
  recommendedHour Int
  score           Float
  baselineScore   Float
  rationale       Json?
  createdAt       DateTime @default(now())

  @@index([contactId, createdAt])
}

model HygieneEvaluation {
  id            String           @id @default(cuid())
  contact       Contact          @relation(fields: [contactId], references: [id], onDelete: Cascade)
  contactId     String
  riskLevel     HygieneRiskLevel
  score         Float
  suppressed    Boolean          @default(false)
  reasons       Json?
  createdAt     DateTime         @default(now())

  @@index([contactId, createdAt])
}

model Flow {
  id               String       @id @default(cuid())
  name             String       @db.VarChar(160)
  status           FlowStatus   @default(DRAFT)
  triggerEventName String       @db.VarChar(120)
  delayMinutes     Int?
  useOptimizer     Boolean      @default(true)
  segment          Segment?     @relation(fields: [segmentId], references: [id])
  segmentId        String?
  template         Template     @relation(fields: [templateId], references: [id])
  templateId       String
  metadata         Json?
  steps            FlowStep[]
  runs             FlowRun[]
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  @@index([status, triggerEventName])
}

model FlowStep {
  id        String       @id @default(cuid())
  flow      Flow         @relation(fields: [flowId], references: [id], onDelete: Cascade)
  flowId    String
  order     Int
  type      FlowStepType
  config    Json?
  createdAt DateTime     @default(now())

  @@unique([flowId, order])
}

model FlowRun {
  id              String         @id @default(cuid())
  flow            Flow           @relation(fields: [flowId], references: [id], onDelete: Cascade)
  flowId          String
  contact         Contact        @relation(fields: [contactId], references: [id], onDelete: Cascade)
  contactId       String
  status          FlowRunStatus  @default(PENDING)
  nextStepOrder   Int
  scheduledAt     DateTime
  startedAt       DateTime?
  completedAt     DateTime?
  cancelledReason String?        @db.VarChar(200)
  context         Json?
  message         Message?       @relation("FlowRunMessage")
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@index([status, scheduledAt])
}
